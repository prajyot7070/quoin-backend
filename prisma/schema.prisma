generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int          @id @default(autoincrement())
  email          String       @unique
  password       String
  name           String?
  role           String       @default("non-developer")
  organizationId Int
  organization   Organization @relation(fields: [organizationId], references: [id])
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model Organization {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  users     User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}